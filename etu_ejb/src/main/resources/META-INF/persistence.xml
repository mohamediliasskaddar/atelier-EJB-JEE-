<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="cnx" transaction-type="JTA">

        <jta-data-source>java:jboss/datasources/EtudiantDS</jta-data-source>

        <class>ma.fstt.models.Module</class>
        <class>ma.fstt.models.Etudiant</class>
        <class>ma.fstt.models.Suivie</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>


    </persistence-unit>
</persistence>


